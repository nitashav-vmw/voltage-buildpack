BIN_DIR=$(cd $(dirname $0); pwd)
ROOT_DIR=$(dirname $BIN_DIR)
BUILD_DIR=$1
CACHE_DIR=$2
DEPS_DIR=$3
INDEX_DIR=$4

# put code in <deps>/<index>

cp $ROOT_DIR/lib/install.sh $DEPS_DIR/$INDEX_DIR

# startup script goes into <deps>/<index>/profile.d
##### final build pack *should* copy it into $HOME/profile.d for[JAVA_BUILDPACK does not support  this]
# execution upon container startup

mkdir -p $DEPS_DIR/$INDEX_DIR/profile.d
cp $ROOT_DIR/lib/install.sh $DEPS_DIR/$INDEX_DIR/profile.d
chmod +x $DEPS_DIR/$INDEX_DIR/profile.d/install.sh
#added for support with JAVA_BUILDPACK
mkdir  $BUILD_DIR/.profile.d/
cp -v $DEPS_DIR/$INDEX_DIR/profile.d/install.sh $BUILD_DIR/.profile.d/

